# Database Configuration
# Nếu sử dụng PostgreSQL external, set DATABASE_URL trực tiếp
DATABASE_URL=postgresql://giftsmith_user:your_secure_database_password_here@localhost:5432/giftsmith_prod
# Hoặc sử dụng DB_PASSWORD nếu dùng container
DB_PASSWORD=your_secure_database_password_here

# JWT & Security
JWT_SECRET=your_super_secure_jwt_secret_here_min_32_chars
COOKIE_SECRET=your_super_secure_cookie_secret_here_min_32_chars

# CORS Configuration
STORE_CORS=https://preprod.giftsmith.com
ADMIN_CORS=https://admin-preprod.giftsmith.com
AUTH_CORS=https://preprod.giftsmith.com

# Contentful Configuration
CONTENTFUL_MANAGEMENT_ACCESS_TOKEN=your_contentful_management_token
CONTENTFUL_DELIVERY_TOKEN=your_contentful_delivery_token
CONTENTFUL_SPACE_ID=your_contentful_space_id
CONTENTFUL_ENVIRONMENT=preprod

# Frontend Configuration
NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY=your_medusa_publishable_key
MEDUSA_BACKEND_URL=https://api-preprod.giftsmith.com
NEXT_PUBLIC_BASE_URL=https://preprod.giftsmith.com
NEXT_PUBLIC_STRIPE_KEY=your_stripe_public_key

# Docker Registry Configuration (cho production)
REGISTRY=ghcr.io
IMAGE_NAME=your-username/giftsmith
VERSION=latest

# Optional: Redis Configuration (nếu sử dụng external Redis)
# REDIS_URL=redis://your-redis-host:6379 